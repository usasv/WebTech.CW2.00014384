<% layout('./index') %>

<div class="d-flex mx-auto align-items-center flex-column">
    <h2>Edit Task</h2>
        <div class=" card my-5 px-4 py-2" style="width: 18rem;">
            <form action="/edit/<%=task._id %> " method="Post">
                
                <div class="mb-3">
                    <label for="task" class="form-label">Task</label>
                    <input type="text" class="form-control" id="task"placeholder="ex. buy fish" value="<%=task.task %> "  name="task[task]">
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" <%= task.importance && "checked" %>  name=task[importance] value="true" class="form-check-input" id="exampleCheck1">
                    <label  class="form-check-label" for="exampleCheck1">Important</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>